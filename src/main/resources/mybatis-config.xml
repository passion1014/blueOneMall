		<typeAlias alias="productInfo" type="com.blueone.product.domain.ProductInfo" />
		<typeAlias alias="searchProdInfo" type="com.blueone.product.domain.SearchProdInfo" />
		<typeAlias alias="attFileInfo" type="com.blueone.common.domain.AttachFileInfo" />

		<typeAlias alias="searchAddress" type="com.blueone.common.domain.SearchAddress" />
		
		<!-- 커뮤니티 관련 모델 정보 -->
		<typeAlias alias="boardInfo" type="com.blueone.board.domain.BoardInfo" />
		<typeAlias alias="boardTypInfo" type="com.blueone.board.domain.BoardTypInfo" />
		<typeAlias alias="boardSrchInfo" type="com.blueone.board.domain.BoardSrchInfo" />
		<typeAlias alias="boardAttachFileInfo" type="com.blueone.board.domain.BoardAttachFileInfo"/>
		<typeAlias alias="boardCommentInfo" type="com.blueone.board.domain.BoardCommentInfo"/>
		<typeAlias alias="FaqInfo" type="com.blueone.board.domain.FaqInfo"/>
		<typeAlias alias="FaqInfo" type="com.blueone.board.domain.NoticeInfo"/>
		
		<!-- 고객관련 모델정보 -->
		<typeAlias alias="userInfo" type="com.blueone.user.domain.UserInfo"/>
		
		<!-- 배송관련 모델정보 -->
		<typeAlias alias="TransferInfo" type="com.blueone.product.domain.TransferInfo"/>
		
		
		<!-- [START] 삭제예정(User 패키지로 대체함) -->
		<typeAlias alias="customerSrchInfo" type="com.blueone.customer.domain.CustomerSrchInfo" /> 
		<typeAlias alias="customerInfo" type="com.blueone.customer.domain.CustomerInfo" /> 
		<typeAlias alias="recipientInfo" type="com.blueone.customer.domain.RecipientInfo" /> 
		<typeAlias alias="customerContactInfo" type="com.blueone.customer.domain.CustomerContactInfo" />
		<!-- [END] 삭제예정(User 패키지로 대체함) -->
		
		
     </typeAliases>
   
